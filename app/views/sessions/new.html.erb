<h1>Log In</h1>
<p>Log in for recipe goodness</p>
<%= form_for(:session, :url => sessions_path) do |f| %> 
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %> 
  </div>
  <div class="field"> 
    <%= f.label :password %><br /> 
    <%= f.password_field :password %>
  </div> 
  <div class="actions">
    <%= f.submit "Sign in" %> 
  </div>
<% end %>
<p>New user? <%= link_to "Register now!", signup_path %></p>